<div id="passengers-index">

  <h2>Rideshare Passengers</h2>

  <%= form_tag(passengers_path, :method => "get", id: "search-form") do %>
      <%= text_field_tag :search, params[:search], placeholder: "Search Passengers" %>
      <%= submit_tag "Search", :name => nil %>
  <% end %>

  <%= will_paginate @passengers %>
    <% @passengers.each do |passenger| %>
      <ul class="entry">
        <li class="pic">
          <%= link_to image_tag("http://placekitten.com/50/50", alt: "profile pic"), passenger_path(passenger.id) %>
        </li>
        <li class="name">
          <%= link_to passenger.name, passenger_path(passenger.id) %>
        </li>
        <li class="modifications">
          <span class="modify">
            <%= link_to "Edit", edit_passenger_path(passenger.id) %>
          </span>
          <span class="modify">
            <%= link_to "Delete", passenger_path(passenger), method: :delete, data: {confirm: "Are you sure you want to delete the passenger #{passenger.name}?"} %>
          </span>
        </li>
      </ul>
    <% end %>
  <%= will_paginate @passengers %>
</div>
