<p><h2 class="newdriver">Welcome to our Family, Driver</h2></p>

<section class="formcontainer">

  <%= render partial: 'layouts/form_errors', locals: { model: @driver } %>

  <%= form_with model: @driver, class: 'driver-form' do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :vin %>
    <%= f.text_field :vin%>

    <%= f.submit action_type, class: 'driver-form-submit-button' %>

  <% end %>
</section>
